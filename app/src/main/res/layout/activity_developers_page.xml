<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graybg"
    tools:context=".DevelopersPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/devText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Developers"
            android:textColor="#000000"
            android:textSize="25sp" />

        <View
            android:id="@+id/separatorLine"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginHorizontal="30dp"
            android:background="@color/black" />

        <ImageView
            android:id="@+id/floresImg"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="0dp"
            app:srcCompat="@drawable/dev_flores" />

        <TextView
            android:id="@+id/floresTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Juan Miguel Flores"
            android:textColor="#000000"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/libanImg"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            app:srcCompat="@drawable/dev_liam" />

        <TextView
            android:id="@+id/libanTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Liam Liban"
            android:textColor="#000000"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/ribayaImg"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            app:srcCompat="@drawable/dev_ribaya" />

        <TextView
            android:id="@+id/ribayaTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Robert Lawrence Ribaya"
            android:textColor="#000000"
            android:textSize="14sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>